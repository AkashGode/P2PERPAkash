@model IEnumerable<P2PLibray.GRN.GRN>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle datatable1" id="grnListTable">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="selectAll"></th>
                <th>#</th>
                <th>GRN Code</th>
                <th>PO Code</th>
                <th>Vendor</th>
                <th>Invoice No</th>
                <th>Status</th>
                <th>Added By</th>
                <th>Added Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var i = 1;
                foreach (var item in Model)
                {
                    var statusClass = item.Status == "Completed" ? "bg-success" :
                                      item.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark";
                    <tr>

                        <td><input type="checkbox" class="row-select" value="@i"></td>
                        <td>@i</td>
                        <td>@item.GRNCode</td>
                        <td>@item.POCode</td>
                        <td>@item.Vendor</td>
                        <td>@item.InvoiceNo</td>
                        <td><span class="badge @statusClass">@item.Status</span></td>
                        <td>@item.AddedBy</td>
                        <td>@item.AddedDate</td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr><td colspan="8" class="text-center">No GRNs found</td></tr>
            }
        </tbody>
    </table>
</div>

